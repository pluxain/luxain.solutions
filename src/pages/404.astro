---
import Link from "@components/Link.astro";
import BaseLayout from "@layouts/BaseLayout.astro";
import * as m from "@messages/messages";
import { availableLanguageTags } from "@messages/runtime";
---

<BaseLayout description="404 | Not Found" pageTitle="404">
  <section
    class="flex w-full grow flex-col justify-center text-center md:m-auto md:w-96"
  >
    <h1 class="text-3xl font-semibold text-blue-500">404</h1>
    {
      availableLanguageTags.map((languageTag) => (
        <div class="pt-6">
          <p class="text-left">[{languageTag}]</p>
          <h2 class="text-2xl font-bold tracking-tight [font-variant-caps:small-caps]">
            {m.not_found(undefined, { languageTag })}
          </h2>
          <p class="pt-2 text-base leading-7 text-gray-600">
            {m.not_found_description(undefined, { languageTag })}!
          </p>
          <p class="pt-4 text-base leading-7 text-gray-600">
            {m.not_found_solution_intro(undefined, { languageTag })}
            <Link href={`/${languageTag}`}>
              {m.here(undefined, { languageTag })}
            </Link>
            .
          </p>
        </div>
      ))
    }
  </section>
</BaseLayout>
